{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "lib": [
      "ES2020",
      "WebWorker"
    ],
    "typeRoots": [
      "node_modules/@types",
      "types",
      "node_modules/apollo-graphql-tools/types",
    ],
    "noEmit": false,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
